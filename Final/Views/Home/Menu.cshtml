@model List<Final.Models.Menu>
@{
    long inner_id = 0;
    foreach (var j in Model)
    {
        if (j.inner_menu != null)
        {
            inner_id = (long)j.inner_menu;

        }
    }
}
<ul>

    @foreach (var item in Model)
    {

        if (item.name.Equals("Đăng nhập"))
        {
            <li><a class="getstarted scrollto" href="@item.link">@item.name</a></li>

        }
        else
        {

            if (item.id != inner_id)
            {
                if (item.inner_menu == null)
                {
                    <li><a class="nav-link scrollto" href="@item.link">@item.name</a></li>
                }

            }
            else
            {
                <li class="dropdown">
                    <a href="#"><span>@item.name</span> <i class="bi bi-chevron-down"></i></a>
                    <ul>
                        @foreach (var i in Model)
                        {
                            if (i.inner_menu != null)
                            {
                                <li><a href="@i.link">@i.name</a></li>
                            }
                        }

                    </ul>
                </li>
            }


        }
    }
</ul>

