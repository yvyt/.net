@model Final.Models.Blog

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Blog</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.meta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.meta)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.content_story)
        </dt>

        <dd>
            @Html.Raw(Model.content_story)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>

        <dd>
             @Html.Action("getBlogCateById", "temp", new { id = Model.CategoryId })

        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.displayOrder)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.displayOrder)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.hide)
        </dt>

        <dd>
            @if (Model.hide == true)
            {
                <p>Hiển thị</p>
            }
            else
            {
                <p>Ẩn</p>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.dateBegin)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateBegin)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.createBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.createBy)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.dateModife)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateModife)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.modifedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.modifedBy)
        </dd>

    </dl>
</div>
<div class="form-group" style="display:flex">
    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("Index")" class="btn btn-info">Trở về</a>
    </div>
    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("Edit",new { id = Model.id })" class="btn btn-info">Chỉnh sửa</a>

    </div>
</div>
