
@{
    ViewBag.Title = "profile";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@section Styles {
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <link href="@Url.Content("~/Assets/home/css/ProfileStyle.css")" rel="stylesheet" type="text/css" />
}
<div class="profile">
    <div class="container-fluid rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-9 ">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" width="150px" src="~/Assets/home/images/profile-user.png">
                    @{ Html.RenderAction("getDetails", "Home", new { id = Model.userID });}
                    <span> </span>
                </div>
            </div>
            <div class="col-md-2"></div>

            <div class="col-md-9 border" style="margin-top:20px">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Thông tin cá nhân</h4>
                    </div>

                    <input type="hidden" value="@Model.id" id="id" />
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels"><h6>Họ Tên</h6></label><input type="text" class="form-control" placeholder="Họ tên" value="@Model.fullname" required id="fullname"></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels"><h6>Số điện thoại</h6></label><input type="text" maxlength="10" class="form-control" placeholder="Vui lòng nhập số điện thoại" value="@Model.phone" required id="phone"></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels"><h6>Địa chỉ</h6></label><input type="text" class="form-control" placeholder="Vui lòng nhập địa chỉ nơi ở" value="@Model.address" required id="address"></div>

                    </div>
                    <div id="alert" style="margin-top:20px"></div>


                    <br />
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="button" id="save">Lưu</button></div>

                </div>
            </div>
            <div class="col-md-2"></div>

            <div class="col-md-9 border" style="margin-top:20px">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center experience">
                        <h4>Lịch sử Apply</h4>
                    </div><br>
                    @{ Html.RenderAction("getHistoryApply", "Home", new { id = Model.userID });}


                </div>
            </div>
            <div class="col-md-2"></div>

            <div class="col-md-9 border" style="margin-top:20px">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center experience">
                        <h4>Lịch sử đăng tải</h4>
                    </div><br>
                    @{ Html.RenderAction("historyStory", "Story", new { id = Model.userID });}


                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Assets/home/vendor/jquery/jquery.min.js"></script>

<script>
    $(document).on('click', "#save", function () {

        var id = $("#id").val();
        var fullname = $("#fullname").val();
        var phone = $("#phone").val();
        var address = $("#address").val();
        console.log(id, fullname, phone, address)
        $.ajax({
            url: '/Home/updateProfile',
            type: 'post',
            data: {
                id: id,
                fullname: fullname,
                phone: phone,
                address: address

            },
            success: function (data) {
                console.log(data)
                if (data.code == 200) {
                    $("#alert").empty();
                    $("#alert").html(`<div class="alert alert-success">${data.msg}</div>`);
                    $("#alert").hide(3000);

                } else {
                    console.log(data.msg);
                    $("#alert").empty();
                    $("#alert").html(`<div class="alert alert-danger">${data.msg}</div>`);
                    $("#alert").hide(3000);

                }
            }
        })
    });
</script>
