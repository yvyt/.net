@model Final.Models.User

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/employer/Views/Shared/_employerLayout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.username)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.username)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.role)
        </dt>

        <dd>
                @if (Model.role == 1)
                {


                    <p>Người ứng tuyển</p>

                }
                else if (Model.role == 2)
                {


                    <p>Nhà tuyển dụng</p>
                }
                else
                {
                    <p>Admin</p>
                }
            
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.status)
        </dt>

        <dd>
                @if (Model.status == true)
                {


                    <p class="text text-success">Hoạt động</p>

                }

                else
                {
                    <p class="text text-danger">Khóa</p>
                }
       </dd>

    </dl>
</div>
<div class="form-group" style="display:flex">
    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("Index")" class="btn btn-info">Trở về</a>
    </div>
    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("Edit",new { id = Model.id })" class="btn btn-info">Chỉnh sửa</a>

    </div>
</div>