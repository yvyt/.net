@model Final.Models.Company

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr class="text-center">
                        <th colspan="2"><h5 id="name">@Html.DisplayFor(model => Model.name)</h5></th>
                    </tr>
                </thead>
                <tbody id="display">
                    <tr>
                        <td><b>Meta</b></td>

                        <td>@Html.DisplayFor(model => Model.meta)</td>
                    </tr>
                    <tr>
                        <td><b>Loại hình</b></td>
                        <td>@Html.DisplayFor(model => Model.type)</td>

                    </tr>
                    <tr>
                        <td><b>Hình ảnh</b></td>
                        <td><img src="@Model.image"/></td>
                    </tr>
                    <tr>
                        <td><b>Quốc gia</b></td>

                        <td>@Html.DisplayFor(model => Model.country)</td>
                    </tr>
                    <tr>
                        <td><b>Địa chỉ</b></td>
                        <td>@Html.Raw(Model.location)</td>
                    </tr>
                    <tr>
                        <td><b>Webstie</b></td>
                        <td><a href="@Model.website" target="_blank">@Model.website</a></td>
                    </tr>
                    <tr>
                        <td><b>Chi tiết</b></td>

                        <td>@Html.Raw(Model.detail)</td>
                    </tr>
                    <tr>
                        <td><b>Liên hệ</b></td>

                        <td>@Html.DisplayFor(model => Model.contact)</td>
                    </tr>
                    <tr>
                        <td><b>OT</b></td>

                        <td>
                            @if (Model.OT == true)
                            {
                                <p>Có</p>
                            }
                            else
                            {
                                <p>Không</p>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><b>Nhân viên</b></td>

                        <td>@Html.DisplayFor(model => Model.employers)</td>
                    </tr>
                    <tr>
                        <td><b>Email tài khoản HR</b></td>

                        <td> @Html.Action("getUsernameFromId", "temp", new { id = Model.userId })</td>
                    </tr>
                    <tr>
                        <td><b>Hiển thị</b></td>

                        <td>
                            @if (Model.hide == true)
                            {
                                <p>Hiển thị</p>
                            }
                            else
                            {
                                <p>Ẩn</p>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><b>Ngày tạo</b></td>
                        <td>@Html.DisplayFor(model => model.dateBegin)</td>
                    </tr>
                    <tr>
                        <td><b>Người tạo</b></td>
                        <td>@Html.DisplayFor(model => model.createBy)</td>
                    </tr>
                    <tr>
                        <td><b>Ngày cập nhật</b></td>
                        <td>@Html.DisplayFor(model => model.dateModife)</td>
                    </tr>
                    <tr>
                        <td><b>Người cập nhật</b></td>
                        <td>@Html.DisplayFor(model => model.modifedBy)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="form-group" style="display:flex">
    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("Index")" class="btn btn-info">Trở về</a>
    </div>
    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("Edit",new { id = Model.id })" class="btn btn-info">Chỉnh sửa</a>

    </div>
</div>