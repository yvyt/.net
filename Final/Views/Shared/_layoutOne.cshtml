
@{
    ViewBag.Title = "_layoutOne";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/d5237ee958.js" crossorigin="anonymous"></script>
    @RenderSection("Styles", false)
</head>
<header id="header" class="fixed-top d-flex align-items-center">
    <div id="container-header" class="container-header">
        <div class="logo">
            <h1 class="text-light"><a href="/home"><span>JobForYou</span></a></h1>
        </div>

        <nav id="navbar" class="navbar">
            @{Html.RenderAction("Menu", "Home");}
        </nav>
    </div>
</header>

<body>
    <div class="container-fluid" style="padding:0">
            @RenderBody();
    </div>
</body>

<!-- ======= Footer ======= -->
<footer id="footer">
    <div class="footer-top" style="display: flex; color: white; margin:0 20%; background-color:#333">
        @{ Html.RenderAction("Footer", "Home");}
    </div>
</footer>
<!-- End Footer -->
</html>

