@model IEnumerable<Final.Models.companyRegister>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<h2>Tài khoản tuyển dụng chờ xét duyệt</h2>
<div class="card shadow mb-4">
    <div style="display: flex;" class="py-3">
        <p style="margin:10px">Search:</p>
        <input type="text" name="searchQuery" placeholder="" class="form-control" id="charSearch">
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr class="text-center">
                        <th>STT</th>
                        <th>Tên công ty</th>
                        <th>Website</th>
                        <th>Loại hình</th>
                        <th>Ghi chú</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody id="display">

                    @{ var number = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.Raw(number++)</td>
                            <td>@Html.DisplayFor(modelI => item.name)</td>
                            <td>@Html.DisplayFor(modelI => item.website)</td>
                            <td>@Html.DisplayFor(modelI => item.type)</td>
                            <td>
                                @if (item.active == false)
                                {
                                    <p class="text text-danger">Đã từ chối</p>
                                }
                            </td>
                            <td class="text-center">
                                
                                <a href="@Url.Action("Details", new { id = item.id })" class="text-dark"><ion-icon name="search-outline"></ion-icon></a>
                                
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

