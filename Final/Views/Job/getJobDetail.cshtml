
@{
    ViewBag.Title = "getJobDetail";
    Layout = "~/Views/Shared/_layoutOne.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <link href="@Url.Content("~/Assets/home/css/JobStyle.css")" rel="stylesheet" type="text/css" />

}

<hr />
<div class="job-detail">
    <div class="container">
        <div class="row">
            <!-- job-detail -->
            <div class="col-lg-8 col-md-8 col-sm-12" style="background-color:whitesmoke">
                <div class="job-information" style="background-color:whitesmoke">
                    <div class="row" style="background-color:whitesmoke">
                        <h3 style="background-color:whitesmoke">@Model.name</h3>
                        <a href="/ung_tuyen/@Model.id"><button type="submit" class="apply">Ứng tuyển</button></a>
                    </div>
                    <hr>
                    <div class="row" style="background-color:whitesmoke">
                        <div class="salary text-success" style="background-color:whitesmoke">
                            <img src="~/Assets/home/images/salary.png" alt="">
                            @if (Model.salary == 0)
                            {
                                <span style="background-color:whitesmoke">Lương thỏa thuận</span>
                            }
                            else
                            {
                                <span style="background-color:whitesmoke">@Model.salary</span>
                            }
                        </div>
                        @Html.Action("getCompanyDetailByJob", "Job", new { id = Model.id })

                        <h3 style="background-color:whitesmoke">Mô tả công việc</h3>
                        <span style="background-color:whitesmoke">@Model.description</span>

                        <br>

                        <h3 style="background-color:whitesmoke">Yêu cầu công việc</h3>

                        <span style="background-color:whitesmoke">@Model.detail</span>
                        <br>


                    </div>
                </div>
            </div>
            <!-- end job-detail -->

            <div class="col-4" style="background-color:whitesmoke;padding-top:5%">
                @Html.Action("companyOverView", "Job", new { id = Model.id })
            </div>
        </div>
    </div>
</div>

