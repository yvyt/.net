@model List<Final.Models.Story>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6" style="padding:15px">
            <div class="card" style="width: 20rem;">
                <img src="~/Assets/home/images/CV2.png" class="card-img-top" alt="...">
                <div class="card-body">
                    @if (item.title.Length > 30)
                    {
                        <h5 class="card-title"><b>@item.title.Substring(0, 30)...</b></h5>
                    }
                    else
                    {
                        <h5 class="card-title"><b></b>@item.title</h5>
                    }
                    <a href="/_chuyen_it/@item.meta" class="btn btn-primary"><span class="content">Xem chi tiết</span></a>
                </div>
            </div>
        </div>
    }

    <a class="text text-danger" style="margin-top:10px;font-size:25px" href="/chuyen_it/all">Xem tất cả</a>
</div>
