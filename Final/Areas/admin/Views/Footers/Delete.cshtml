@model Final.Models.Footer

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_adminLayout.cshtml";
}

<h2>Xóa footer</h2>

<div>
    <hr />
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr class="text-center">
                            <th colspan="2"><h5 id="name">@Html.DisplayFor(model => Model.contentF)</h5></th>
                        </tr>
                    </thead>
                    <tbody id="display">
                        <tr>
                            <td><b>Loại</b></td>

                            <td>@Html.DisplayFor(model => Model.type)</td>
                        </tr>


                        <tr>
                            <td><b>Cột</b></td>

                            <td>@Html.DisplayFor(model => Model.columnIndex)</td>
                        </tr>

                        <tr>
                            <td><b>Hiển thị</b></td>

                            <td>
                                @if (Model.hide == true)
                                {
                                    <p>Hiển thị</p>
                                }
                                else
                                {
                                    <p>Ẩn</p>
                                }
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div style="display:flex">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("Index")" class="btn btn-info">Trở về</a>
            </div>
            <div class="form-actions">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    }
</div>
